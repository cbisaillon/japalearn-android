<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlashCardEditView">
        <attr name="hint" format="string" />
        <attr name="side" format="enum">
            <enum name="front" value="0" />
            <enum name="back" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FuriganaTextView">
        <attr name="android:text"/>
        <attr name="android:maxLines"/>
        <attr name="android:textAlignment"/>
        <attr name="android:lineSpacingExtra"/>
        <attr name="android:layout_marginEnd"/>
        <attr name="android:layout_marginLeft"/>
        <attr name="android:layout_marginRight"/>
        <attr name="android:layout_marginStart"/>
        <attr name="furiganaSize" format="dimension"/>
    </declare-styleable>
</resources>